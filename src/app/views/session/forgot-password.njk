{% extends "layout.njk" %}
{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render("Esqueceu a senha?", "password container")%}
  <form method="POST" action="/users/forgot-password">

    <div class="fields">
      <div class="items">
        <div>E-mail</div>
        <div class="input">
          <input type="email" name="email" placeholder="Digite o seu e-mail cadastrado" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
        </div>
      </div>
    </div>

    <button class="button" type="submit">Recuperar Senha</button>

    <script>
      const formCreate = document.querySelector(".button")
      formCreate.addEventListener("submit", function (event) {
        const confirmar = confirm("Deseja receber um e-mail para recuperar a senha")
        if (!confirmar) {
          event.preventDefault()
        }
      })
    </script>
  </form>
  {% endcall %}
{% endblock content %}
